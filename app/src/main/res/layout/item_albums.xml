<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imv_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/tv_albums"
        android:src="@drawable/bg_album_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderColor="#fff"
        app:siBorderWidth="2dp"
        app:siRadius="5dp"
        app:siSquare="true" />

    <TextView
        android:id="@+id/tv_title_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        android:text="@string/tv_albums"
        android:textColor="#000"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_albums" />
</android.support.constraint.ConstraintLayout>
