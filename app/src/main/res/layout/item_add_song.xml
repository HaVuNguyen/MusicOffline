<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/imv_add_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/tv_song"
        android:src="@drawable/bg_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_add_song"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name_song_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tv_song"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_15"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_name_artist_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:singleLine="true"
            android:text="@string/tv_song"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_13"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
