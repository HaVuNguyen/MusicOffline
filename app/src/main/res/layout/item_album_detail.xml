<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:layout_width="@dimen/image_50"
        android:layout_height="@dimen/image_50"
        android:id="@+id/imv_albums_detail"
        android:src="@drawable/bg_album_default"
        android:contentDescription="@string/tv_albums" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_album_detail"
        android:text="@string/tv_albums"
        android:textSize="@dimen/text_size_17"
        android:textStyle="normal"
        android:textColor="#222222"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>
</LinearLayout>
